<p style="color: green"><%= notice %></p>

<p><strong>Data:</strong> <%= data_br(Date.today)%></p>

<h2> <%= cookies[:curso] %></h2>
<h1>Coins</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= @coins.human_attribute_name(:description) %></th>
      <th><%= @coins.human_attribute_name(:acronym) %></th>
      <th><%= @coins.human_attribute_name(:url_image) %></th>
      <th colspan = "3" ></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><img src= "<%=coin.url_image%>" width="40px" height="40px" /> </td>
        <td><%= link_to t('links.mostrar'), coin %></td>
        <td><%= link_to t('links.editar'), edit_coin_path(coin) %></td>
        <td><%= link_to t('links.deletar'), coin, method: :delete, data: { confirm: t('messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('Nova Moeda'), new_coin_path, class:"btn btn-primary" %>
<%= link_to t('Tipos de mineração'), mining_types_path, class:"btn btn-primary" %>